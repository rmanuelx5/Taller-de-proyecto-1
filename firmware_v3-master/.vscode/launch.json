{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug EDU-CIAA-NXP (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/${config:educiaa.programPath}/${config:educiaa.programName}/out/${config:educiaa.programName}.elf",
            "device": "LPC4337",
            "configFiles": [
                "${workspaceFolder}/scripts/openocd/lpc4337.cfg"
            ],
            "svdFile": "${workspaceFolder}/documentation/LPC43xx_43Sxx.svd",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "preLaunchTask": "Build (Compilar)"
        },
        {
            "name": "Attach EDU-CIAA-NXP (OpenOCD)",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/${config:educiaa.programPath}/${config:educiaa.programName}/out/${config:educiaa.programName}.elf",
            "device": "LPC4337",
            "configFiles": [
                "${workspaceFolder}/scripts/openocd/lpc4337.cfg"
            ],
            "svdFile": "${workspaceFolder}/documentation/LPC43xx_43Sxx.svd"
        }
    ]
}
