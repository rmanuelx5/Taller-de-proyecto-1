{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Compilar)",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "gcc",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Clean (Limpiar)",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean All (Limpiar Todo)",
            "type": "shell",
            "command": "make",
            "args": [
                "clean_all"
            ],
            "problemMatcher": []
        },
        {
            "label": "Download to Flash (Descargar a Flash)",
            "type": "shell",
            "command": "make",
            "args": [
                "download"
            ],
            "problemMatcher": [],
            "dependsOn": "Build (Compilar)"
        },
        {
            "label": "Erase Flash (Borrar Flash)",
            "type": "shell",
            "command": "make",
            "args": [
                "erase"
            ],
            "problemMatcher": []
        },
        {
            "label": "Select Program (Seleccionar Programa)",
            "type": "shell",
            "command": "make",
            "args": [
                "select_program"
            ],
            "problemMatcher": []
        },
        {
            "label": "Select Board (Seleccionar Placa)",
            "type": "shell",
            "command": "make",
            "args": [
                "select_board"
            ],
            "problemMatcher": []
        },
        {
            "label": "New Program (Nuevo Programa)",
            "type": "shell",
            "command": "make",
            "args": [
                "new_program"
            ],
            "problemMatcher": []
        }
    ]
}
